  </tr>
  <tr class="detailsBody">
    <td>skills</td>
    <td>
      <table>
        <tr>
          <td>level</td>
          <td>{{ player.skills.level }}</td>
        </tr>
        <tr>
          <td>exp</td>
          <td>{{ player.skills.exp }}</td>
        </tr>
        <tr>
          <td>fist</td>
          <td><b>{{ player.skills.fist }}</b> ( 188 <i>+100</i> )</td>
        </tr>
        <tr>
          <td>dist</td>
          <td><b>{{ player.skills.dist }}</b> ( 189 <i>+100</i> )</td>
        </tr>
        <tr>
          <td>def</td>
          <td><b>{{ player.skills.def }}</b> ( 88 <i>+168</i> )</td>
        </tr>
        <tr>
          <td>magic</td>
          <td>{{ player.skills.magic }}</td>
        </tr>
        <tr>
          <td>speed</td>
          <td><b>{{ player.speed }}</b> ( 3 <i>+1</i> )</td>
        </tr>
      </table>
    </td>
  </tr>
  <tr class="detailsBody">
    <td>quests</td>
    <td class="quests">
      <ul>
        {% for quest in player.quests %}
          <li> {{ quest }} </li>
        {% endfor %}
      </ul>
    </td>
  </tr>
  <tr class="detailsBody">
    <td>lastDeaths</td>
    <td>
      <table>
        {% for death in player.lastDeaths %}
          <tr>
            <td>2022.01.11<br><sub>20:00</sub></td>
            <td>By 
              {% if death.whoType == 'player' %}
                <a href="/player/{{death.who}}">{{ death.who }}</a>
              {% else %}
                {{ death.who }} 
              {% endif%}              
              on {{death.level}} level.</td>
          </tr>
        {% endfor %}
      </table>
    </td>
  </tr>
